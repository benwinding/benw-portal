extends ../shared/layout

block head
    title=portalData.title
    meta(name="description" content=portalData.subtitle)
    link(rel='stylesheet', href='/portal/projects-table.css')
    link(rel='stylesheet', href='/portal/subdomains.css')
    link(rel='stylesheet', href='/portal/blog-preview.css')
    meta(property="og:image" content="https://i.imgur.com/orqq5jB.jpg")
    meta(property="og:title" content=portalData.title)
    meta(property="og:description" content=portalData.subtitle)

block content
    //- Introduction
    .background-intro
        .container
            .col-xs-12.col-md-6.col-md-offset-3
                br
                p=portalData.subtitle
                strong=portalData.description

    //- Projects
    include projects-table.pug

    //- Blog Previews
    .background-blog
        include blog-preview.pug

    //- Sub Domains
    .background-subdomains
        include subdomains.pug